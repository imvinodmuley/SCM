<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_full"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.Dapp"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".rewardfine"
            android:label="@string/title_activity_rewardfine"
            android:theme="@style/Theme.Dapp.NoActionBar"></activity>
        <activity android:name=".checkproduct" />
        <activity android:name=".display_collector_product" />
        <activity android:name=".display_product_info" />
        <activity android:name=".displayqr" />
        <activity android:name=".collector_dashboard" />
        <activity android:name=".rewards" />
        <activity android:name=".scanqr" />
        <activity android:name=".customer_dashboard" />
        <activity android:name=".registration" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>